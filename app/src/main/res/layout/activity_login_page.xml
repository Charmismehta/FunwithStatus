<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dbbackground"
    android:orientation="vertical"
    tools:context=".LoginPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">


<ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:layout_marginBottom="@dimen/_16sdp"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/icon"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/whitesolidsqure"
                android:orientation="horizontal">


            <ImageView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                    android:src="@drawable/google" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGN IN WITH GOOGLE"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/loginbluebox"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">


            <ImageView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/facebook" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="SIGN IN WITH FACEBOOK"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">
            <View
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="#ffffff"></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/white"
                android:text="OR"/>
                <View
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:background="#ffffff"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_16sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/whitesolidsqure"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/login_user"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="left"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/usernamegray" />

                    <EditText
                        android:id="@+id/login_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:hint="Enter your Email ID"
                        android:inputType="textEmailAddress" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/whitesolidsqure"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/login_password"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="left"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/passwordgray" />

                    <EditText
                        android:id="@+id/login_epassword"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:hint="Enter Password"
                        android:inputType="textPassword" />

                    <ImageView
                        android:id="@+id/pwdeye"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:src="@drawable/eyeclosed" />

                </LinearLayout>

                <TextView
                    android:id="@+id/login_tlogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/whitesqure"
                    android:gravity="center"
                    android:text="SIGN IN"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/login_tforgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:textSize="@dimen/_8sdp"
                android:textColor="#fff"
                android:text="FORGOT YOUR PASSWORD ?"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_32sdp"
                android:textSize="@dimen/_8sdp"
                android:textColor="#acaaaa"
                android:text="DON'T HAVE AN ACCOUNT ?"/>

    <TextView
        android:id="@+id/login_tsignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:textSize="@dimen/_8sdp"
        android:textColor="@color/white"
        android:text="REGISTER"/>
</LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>