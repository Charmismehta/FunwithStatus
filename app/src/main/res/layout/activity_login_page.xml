<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".LoginPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_16sdp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_16sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:background="@drawable/whitesolidsqure"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:id="@+id/login_user"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/usernamegray" />

                    <EditText
                        android:id="@+id/login_email"
                        android:layout_width="match_parent"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:hint="Enter your Email ID"
                        android:inputType="textEmailAddress" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/whitesolidsqure"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_weight="0"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:id="@+id/login_password"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/passwordgray" />

                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/login_epassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:hint="Enter Password"
                        android:inputType="textPassword" />

                    <ImageView
                        android:layout_weight="0"
                        android:id="@+id/pwdeye"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/eyeclosed" />

                </LinearLayout>

                <TextView
                    android:id="@+id/login_tlogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/whitesqure"
                    android:gravity="center"
                    android:text="SIGN IN"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/login_tforgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:textSize="@dimen/_8sdp"
                android:textColor="#fff"
                android:text="FORGOT YOUR PASSWORD ?"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
        android:layout_marginLeft="@dimen/_73sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_32sdp"
        android:textSize="@dimen/_8sdp"
        android:textColor="#acaaaa"
        android:text="DON'T HAVE AN ACCOUNT ?"/>
    <TextView
        android:id="@+id/login_tsignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:textSize="@dimen/_8sdp"
        android:textColor="@color/white"
        android:text="Sign Up"/>
</LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>