<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registrationbg"
    android:orientation="vertical"
    tools:context=".LoginPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">


<ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/icon"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_45sdp"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="horizontal">


                          <ImageView
                            android:id="@+id/login_user"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="left"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/usernamegray" />

                        <EditText
                            android:id="@+id/login_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@android:color/transparent"
                            android:hint="Enter your Email ID"
                            android:inputType="textEmailAddress"
                            android:textColorHint="#000"/>
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:id="@+id/login_password"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="left"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/passwordgray" />

                            <EditText
                                android:id="@+id/login_epassword"
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@android:color/transparent"
                                android:hint="Enter Password"
                                android:inputType="textPassword"
                                android:textColorHint="#000"/>

                        <ImageView
                            android:id="@+id/pwdeye"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:src="@drawable/eyeclosed" />

                        </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/login_tlogin"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/login"/>


                    <Button
                        android:id="@+id/login_tsignin"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:background="@drawable/signup"/>



                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/login_tforgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="left"
                android:textSize="@dimen/_15sdp"
                android:textColor="#000"
                android:text="Forgot password ?"/>



            <LinearLayout
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:src="@drawable/facebooklogo"
                />
                <ImageView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:src="@drawable/googlelogo"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>