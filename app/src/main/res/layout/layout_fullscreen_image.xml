<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainlayout"
    android:gravity="center">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/display_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/videocamera" />
        <LinearLayout
            android:layout_marginBottom="@dimen/_15sdp"
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_26sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="@dimen/_15sdp"
                android:id="@+id/download"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_16sdp"
                android:src="@drawable/vc_download" />

            <ImageView
                android:id="@+id/like"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_16sdp"
                android:src="@drawable/vc_thumbup" />


            <ImageView
                android:id="@+id/dislike"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_16sdp"
                android:src="@drawable/vc_thumbdown" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_16sdp"
                android:src="@drawable/vc_share" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_16sdp"
                android:src="@drawable/vc_delete"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_16sdp"
                android:src="@drawable/whatsapp" />

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_23sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_gravity="center"
                android:src="@drawable/fbicon" />


        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>