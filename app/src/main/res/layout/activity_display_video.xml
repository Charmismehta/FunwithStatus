<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainlayout"
    android:gravity="center"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".DisplayVideo">

    <VideoView
        android:layout_centerInParent="true"
        android:id="@+id/display_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp" />
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    <LinearLayout
        android:layout_margin="@dimen/_16sdp"
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/download"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_16sdp"
            android:src="@drawable/vc_download" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_16sdp"
            android:src="@drawable/vc_thumbup" />


        <ImageView
            android:id="@+id/dislike"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_16sdp"
            android:src="@drawable/vc_thumbdown" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_16sdp"
            android:src="@drawable/vc_share" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_16sdp"
            android:src="@drawable/vc_delete"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_16sdp"
            android:src="@drawable/whatsapp" />



    </LinearLayout>
</RelativeLayout>
