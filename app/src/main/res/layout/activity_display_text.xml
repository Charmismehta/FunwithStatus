<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightbg"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:elevation="8dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="15dp"
                card_view:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:id="@+id/rlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/appcolorsqure">

                    <com.rockerhieu.emojicon.EmojiconTextView
                        android:id="@+id/display_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="monospace"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_16sdp"
                        android:text="Looks like an issue with the format to me. It might help to see the actual console error message with callstack, could you paste the full logcat output?"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />


                    <LinearLayout

                        android:id="@+id/layout_content"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_below="@+id/display_text"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@color/colorAccent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/copy"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:src="@drawable/vc_copy" />

                        <ImageView
                            android:id="@+id/like"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:src="@drawable/vc_thumbup" />


                        <ImageView
                            android:id="@+id/dislike"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:src="@drawable/vc_thumbdown" />

                        <ImageView
                            android:id="@+id/share"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:src="@drawable/vc_share" />

                        <ImageView
                            android:id="@+id/delete"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:visibility="gone"
                            android:src="@drawable/vc_delete" />

                        <ImageView
                            android:id="@+id/whatsapp"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:src="@drawable/whatsapp" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>


