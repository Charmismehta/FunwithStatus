<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dbbackground"
    tools:context=".RegistrationPage">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:background="@drawable/whitesolidsqure"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:src="@drawable/google" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP WITH GOOGLE"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:background="@drawable/loginbluebox"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_16sdp"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/facebook" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="SIGN UP WITH FACEBOOK"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <View
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="#ffffff"></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/white"
                android:text="OR"/>
            <View
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="#ffffff"></View>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:orientation="vertical">
        <LinearLayout
            android:background="@drawable/whitesolidsqure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/registrathionuser" />


            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:background="@android:color/transparent"
                android:hint="Name"
                android:inputType="text"
                android:paddingLeft="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/whitesolidsqure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/registrathionuser" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:background="@android:color/transparent"
                android:hint="User Name"
                android:inputType="text"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="#000" />
        </LinearLayout>


        <LinearLayout
            android:background="@drawable/whitesolidsqure"
            android:id="@+id/lbirthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/registrathiondob" />

            <TextView
                android:id="@+id/tbirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:inputType="date"
                android:paddingLeft="@dimen/_10sdp"
                android:hint="Birthdate"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>


        <LinearLayout
            android:background="@drawable/whitesolidsqure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:src="@drawable/registrathionmail" />


            <EditText
                android:id="@+id/register_eemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/whitesolidsqure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:src="@drawable/phoneicon" />


            <EditText
                android:id="@+id/register_emobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:hint="Phone Number"
                android:inputType="number"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="#000" />
        </LinearLayout>


        <LinearLayout
            android:background="@drawable/whitesolidsqure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="0"
                android:src="@drawable/registrathionkey" />

            <EditText
                android:id="@+id/register_epassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="7"
                android:background="@android:color/transparent"
                android:hint="Your Password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/pwdeye"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/eyeclosed" />


        </LinearLayout>

        <TextView
            android:id="@+id/btnRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Register"
            android:layout_marginTop="@dimen/_16sdp"
            android:textSize="@dimen/_16sdp"
            android:gravity="center_horizontal"
            android:background="@drawable/whitesqure"/>

            <LinearLayout
                android:id="@+id/login_tsignin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="#acaaaa"
                    android:text="ALREADY HAVE AN ACCOUNT ?"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:text="SIGN IN"/>
            </LinearLayout>


    </LinearLayout>


    </LinearLayout>
</ScrollView>
</LinearLayout>