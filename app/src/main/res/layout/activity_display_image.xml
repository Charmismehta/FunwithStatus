<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainlayout"
    android:gravity="center"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".DisplayImage">

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:layout_marginBottom="@dimen/_60sdp"
            android:id="@+id/display_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/videocamera" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_26sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_30sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="@dimen/_15sdp"
            android:id="@+id/download"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_16sdp"
            android:src="@drawable/vc_download" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_16sdp"
            android:src="@drawable/vc_thumbup" />


        <ImageView
            android:id="@+id/dislike"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_16sdp"
            android:src="@drawable/vc_thumbdown" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_16sdp"
            android:src="@drawable/vc_share" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_16sdp"
            android:src="@drawable/vc_delete"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_16sdp"
            android:src="@drawable/whatsapp" />

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_gravity="center"
            android:src="@drawable/fbicon" />


    </LinearLayout>
</RelativeLayout>
